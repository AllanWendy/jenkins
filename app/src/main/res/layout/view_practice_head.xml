<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_dish_practice_title_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/app_dish_practice_title"
        style="@style/UIKit.Font.Big.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="芙蓉口水鸡" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/app_ic_dish_shop" />

        <TextView
            android:id="@+id/app_dish_practice_title_desc"
            style="@style/UIKit.Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俏江南" />

    </LinearLayout>

    <View
        style="@style/UIKit.Line.Horizontal"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/uikit_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/app_dish_practice_name"
            style="@style/UIKit.Font.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/app_ic_practice_step"
            android:drawablePadding="10dp"
            android:text="制作步骤" />


    </LinearLayout>

    <View
        style="@style/UIKit.Line.Horizontal"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/uikit_grey" />


</LinearLayout>