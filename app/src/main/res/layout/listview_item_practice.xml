<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/app_dish_practice_position"
            style="@style/UIKit.Font.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_shape_new_msg"
            android:gravity="center"
            android:minHeight="22dp"
            android:minWidth="22dp"
            android:src="@drawable/uikit_bt_back" />

        <TextView
            android:id="@+id/app_dish_practice_content"
            style="@style/UIKit.Font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="false" />
    </LinearLayout>

    <ImageView
        android:id="@+id/app_dish_practice_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="centerCrop" />

    <View
        style="@style/UIKit.Line.Horizontal"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp" />

</LinearLayout>