<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/app_guide_four_bg"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guid_four_img_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/app_guide_four_text"/>


        <ImageView
            android:id="@+id/guid_four_img_earth"
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="-320dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_guide_four_earth"/>

        <ImageView
            android:id="@+id/guid_four_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/app_guide_four_btn"/>
    </FrameLayout>
</FrameLayout>