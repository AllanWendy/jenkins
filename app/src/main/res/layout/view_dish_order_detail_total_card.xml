<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uikit_white"
    android:orientation="vertical">

    <View
        style="@style/UIKit.Line.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/uikit_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/app_order_detail_delivery_price_label"
            style="@style/UIKit.Font.Dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="配送费"/>

        <TextView
            android:id="@+id/app_order_detail_delivery_price"
            style="@style/UIKit.Font.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="90dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/uikit_grey"/>

    <LinearLayout
        android:id="@+id/app_order_detail_info_coupon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/UIKit.Font.Dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="优惠"/>

        <TextView
            android:id="@+id/app_order_detail_info_coupon_price"
            style="@style/UIKit.Font.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="90dp"
            android:text="$5.0"/>
    </LinearLayout>

    <View
        android:id="@+id/app_order_detail_info_coupon_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/uikit_grey"/>

    <LinearLayout
        android:id="@+id/app_order_detail_info_cj"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/UIKit.Font.Dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="菜金"/>

        <TextView
            android:id="@+id/app_order_detail_info_cj_price"
            style="@style/UIKit.Font.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="90dp"
            android:text="$5.0"/>
    </LinearLayout>

    <View
        android:id="@+id/app_order_detail_info_cj_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/uikit_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            style="@style/UIKit.Font.Dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实付"/>

        <TextView
            android:id="@+id/app_order_detail_total_price"
            style="@style/UIKit.Font.Huge.Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$117.0"/>
    </LinearLayout>

    <View
        style="@style/UIKit.Line.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/uikit_grey"/>
</LinearLayout>