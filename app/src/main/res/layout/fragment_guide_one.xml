<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_guide_one"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_guide_one_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@drawable/app_ic_guide_one_img"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/app_guide_one_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:src="@drawable/app_tv_guide_one_text"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/app_guide_one_checkbox"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/app_bt_guide_one_checkbox"
        android:visibility="invisible" />
</LinearLayout>