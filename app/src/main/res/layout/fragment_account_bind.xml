<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/uikit_grey"
    android:orientation="vertical">

    <include layout="@layout/uikit_view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <include
            android:id="@+id/app_account_bind_item_weixin"
            layout="@layout/view_account_bind" />

        <View
            style="@style/UIKit.Line.Horizontal"
            android:layout_marginLeft="16dp" />

        <include
            android:id="@+id/app_account_bind_item_qq"
            layout="@layout/view_account_bind" />

        <View
            style="@style/UIKit.Line.Horizontal"
            android:layout_marginLeft="16dp" />

        <include
            android:id="@+id/app_account_bind_item_weibo"
            layout="@layout/view_account_bind" />

    </LinearLayout>
</LinearLayout>
