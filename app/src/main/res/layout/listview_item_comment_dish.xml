<?xml version="1.0" encoding="utf-8"?><!--    *****NAME_RULES*****   ==============================================drawable:    {group _ type _ name _ [state] _ [suffix]}==============================================id:    {group _ ui _ type _ [local] _ name}==============================================layout:    {[group] _ ui _ name}==============================================menu:    {[group] _ ui _ name}==============================================anim:    {group _ name _ [local]}==============================================string:    {group _ [ui] _ name}==============================================dimen:    {group _ name _ property _ [size]}==============================================**********************************************group:    [common|uikit|sdk|app]ui:    [main|kitchen|home|activity|fragment|view|actionbar|...]type:    [bg(background)|ic(icon)|bt(button(必须有状态))|txt(textfield)    |list(listview)|menu(menuitem)|radio(radiobutton)|checkbox|...]local:    [top|head|bottom|left|right|in|out|rotate|...]property:    [font|padding|margin|height|width|...]size:    [large|big|normal|small|double|treble|...]state:    [normal|pressed|disabled|on|off|...]suffix:    [light|dark|...]==============================================**********************************************--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:layout_width="match_parent"              android:layout_height="wrap_content"              android:background="@color/uikit_white"              android:orientation="vertical"              android:paddingLeft="15dp"              android:paddingRight="15dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:paddingTop="15dp">        <com.wecook.uikit.widget.shape.CircleImageView            android:id="@+id/app_comment_avatar"            android:layout_width="@dimen/app_user_avatar_big_width"            android:layout_height="@dimen/app_user_avatar_big_height"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            android:paddingLeft="@dimen/uikit_default_padding">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center">                <TextView                    android:id="@+id/app_comment_name"                    style="@style/UIKit.Font.Dark"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"/>                <TextView                    android:id="@+id/app_comment_time"                    style="@style/UIKit.Font.Small"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:duplicateParentState="false"                    android:gravity="center"                    android:text="19:00"/>            </LinearLayout>            <RatingBar                android:id="@+id/app_comment_star"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:isIndicator="true"                android:max="5"                android:maxHeight="14dp"                android:minHeight="14dp"                android:numStars="5"                android:progressDrawable="@drawable/app_star_bar"                android:stepSize="1"/>        </LinearLayout>    </LinearLayout>    <TextView        android:id="@+id/app_comment_content"        style="@style/UIKit.Font.Dark"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:paddingTop="15dp"        android:singleLine="false"/>    <!--图片展示 TODO-->    <HorizontalScrollView        android:id="@+id/app_comment_picture_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:scrollbars="none"        android:visibility="gone">        <cn.wecook.app.main.dish.order.PictureHelpView            android:id="@+id/app_comment_pictureview"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>    </HorizontalScrollView>    <LinearLayout        android:id="@+id/app_comment_reply_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:background="@color/uikit_grey_light"        android:orientation="vertical"        android:padding="10dp"        android:visibility="gone">        <TextView            android:id="@+id/app_comment_reply_name"            style="@style/UIKit.Font.Orange"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="gone"/>        <TextView            android:id="@+id/app_comment_reply_content"            style="@style/UIKit.Font.Orange"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:singleLine="false"            android:textColor="@color/uikit_777"            android:visibility="gone"/>    </LinearLayout>    <TextView        android:id="@+id/app_comment_dish"        style="@style/UIKit.Font"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:drawableRight="@drawable/app_ic_goto"        android:paddingBottom="15dp"        android:paddingTop="15dp"        android:textSize="@dimen/uikit_default_font_small"        android:visibility="gone"/>    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:layout_marginTop="15dp"        android:background="@color/uikit_grey"/></LinearLayout>