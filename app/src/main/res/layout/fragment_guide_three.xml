<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/app_guide_three_bg"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guid_three_img_bottom"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="-140dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_guide_three_img3"/>

        <ImageView
            android:id="@+id/guid_three_img_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/app_guide_three_img2"/>

        <ImageView
            android:id="@+id/guid_three_img_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:paddingBottom="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/app_guide_three_img1"/>


        <ImageView
            android:id="@+id/app_guide_three_checkbox"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp"
            android:src="@drawable/app_bt_guide_three_checkbox"
            android:visibility="visible"/>
    </FrameLayout>
</FrameLayout>