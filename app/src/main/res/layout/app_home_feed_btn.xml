<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/uikit_default_padding"
              android:background="@color/uikit_pulltorefresh_bg"
              android:orientation="vertical"
              android:paddingLeft="@dimen/uikit_default_padding"
              android:paddingRight="@dimen/uikit_default_padding"
              android:paddingTop="@dimen/uikit_default_padding">

    <LinearLayout
        android:id="@+id/app_home_feed_more_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/app_bt_home_more"
        android:gravity="center">

        <Button
            android:id="@+id/app_home_feed_button"
            style="@style/UIKit.Button"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@null"
            android:drawableRight="@drawable/app_ic_right"
            android:text="查看更多"
            android:textColor="@color/uikit_777"
            android:textSize="@dimen/uikit_default_font_normal_small"/>
    </LinearLayout>

</LinearLayout>